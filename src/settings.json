{
  "general": {
    "classes": "btn mr-1",
    "target": "_blank",
    "small": "bgn-sm",
    "large": "btn-lg"
  },
  "media": {
    "whatsapp": {
      "background": "#25d366",
      "foreground": "white",
      "icon": "<i class='fab fa-whatsapp'></i>",
      "href": "https://wa.me/?text=:message",
      "type": "url",
      "details": "https://faq.whatsapp.com/en/general/26000030"
    },
    "facebook": {
      "background": "#3b5998",
      "foreground": "white",
      "icon": "<i class='fab fa-facebook'></i>",
      "type": "url",
      "href": "https://www.facebook.com/sharer/sharer.php?u=:url"
    },
    "twitter": {
      "background": "#1da1f2",
      "foreground": "white",
      "icon": "<i class='fab fa-twitter'></i>",
      "type": "url",
      "href": "https://twitter.com/intent/tweet?url=:url&text=:message"
    },
    "linkedin": {
      "background": "#0077b5",
      "foreground": "white",
      "icon": "<i class='fab fa-linkedin'></i>",
      "type": "url",
      "href": "https://www.linkedin.com/shareArticle?mini=true&url=:url&title=:title&summary=:message"
    },
    "pinterest": {
      "background": "#bd081c",
      "foreground": "white",
      "icon": "<i class='fab fa-pinterest'></i>",
      "type": "url",
      "href": "http://pinterest.com/pin/create/button/?url=:url&description=:message"
    },
    "tumblr": {
      "background": "#35465c",
      "foreground": "white",
      "icon": "<i class='fab fa-tumblr'></i>",
      "type": "url",
      "href": "https://www.tumblr.com/widgets/share/tool?shareSource=legacy&canonicalUrl=:url&posttype=link"
    },
    "telegram": {
      "background": "#0088cc",
      "foreground": "white",
      "icon": "<i class='fab fa-telegram'></i>",
      "type": "url",
      "href": "https://telegram.me/share/url?url=:url&text=:message"
    },
    "sms": {
      "background": "#5bd419",
      "foreground": "white",
      "icon": "<i class='fas fa-sms'></i>",
      "type": "url",
      "href": "sms://?body=:message"
    },
    "copy": {
      "background": "#404040",
      "foreground": "white",
      "icon": "<i class='fas fa-copy'></i>",
      "type": "copy"
    }
  }
}
